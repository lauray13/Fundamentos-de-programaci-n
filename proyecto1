void ContrasenaRegistro(string password[], string passwordos[])
{
    string x,p;
    do {
    cout<<"Contrasena: "<<endl;
    cin>>x;
    cout<<"Confirmar contrasena: "<<endl;
    cin>>p;
    if(x!=p)
    {
      cout<<"La contrasena no coincide, ingrese nuevamente: "<<endl;
  }
    }
    while(x!=p);    
}
