#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{
	int n[100],numero;
	cout<<"Ingrese los valores que va a tener el arreglo: "<<endl;
	cin>>numero;
	for(int i=0;i<numero;i++)
	{
		cout<<"Digite el numero:"<<endl;
		cin>>n[i];
	}
	for(int i=0;i<numero;i++)
	{
		cout<<i<<"-->"<<n[i]<<endl;
	}
	getch();
}
