#include <iostream>
#include "math.h"

using namespace std;

int main()
{
	int segundos,horas,minutos,aux,aux2;
	minutos=segundos/60;
	cout<<"Ingrese la cantidad de segundos"<<endl;
	cin>>segundos;
	if(segundos>3600)
	{
		horas=segundos/3600;
		cout<<"Hora: "<<horas<<endl;
		aux=segundos-3600;
		minutos=aux/60;
		aux2=aux%60;
		cout<<"Minuto: "<<minutos<<endl;
		cout<<"Segundos: "<<aux2<<endl;
	}
	else
	{
		minutos=segundos/60;
		aux2=segundos%60;
		cout<<"Minutos: "<<minutos<<endl;
		cout<<"Segundos: "<<aux2<<endl;
	}
	return 0;
}
